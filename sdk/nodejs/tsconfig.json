{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "files": [
        "binding.ts",
        "config/index.ts",
        "config/vars.ts",
        "getSpec.ts",
        "index.ts",
        "provider.ts",
        "ruleScript.ts",
        "spec.ts",
        "utilities.ts"
    ]
}
